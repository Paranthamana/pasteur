<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.activity.CreatePasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_45sdp"
            android:src="@drawable/ic_logos" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginLeft="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_47sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvForgotpasswordView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create password"
                android:textColor="@color/textTitle"
                android:textSize="@dimen/_20sdp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvPleaseenternewpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Please enter your new password"
                android:textColor="@color/textSubTitle"
                android:textSize="@dimen/_10sdp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvMobileNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="New Password"
                android:textColor="@color/textTitle"
                android:textSize="@dimen/_13sdp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/edtMobileNo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/edittextbg"
                android:elevation="@dimen/_3sdp"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/_15sdp"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/cusror_color"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/tvConfirmpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="Confirm password"
                android:textColor="@color/textTitle"
                android:textSize="@dimen/_13sdp"
                android:textStyle="normal"
                android:visibility="visible" />

            <EditText
                android:id="@+id/edtConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/edittextbg"
                android:elevation="@dimen/_3sdp"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/_15sdp"
                android:singleLine="true"
                android:visibility="visible"
                android:textCursorDrawable="@drawable/cusror_color"
                android:textSize="@dimen/_10sdp" />

            <LinearLayout
                android:id="@+id/llCreatePasswordSubmit"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/_38sdp"
                android:background="@drawable/login_bg"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp">

                <TextView
                    android:id="@+id/tvSubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Submit"
                    android:textColor="@color/colorWhite" />

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:src="@drawable/ic_send"
                    android:tint="@color/colorWhite" />


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ic_borderbanner"
        android:gravity="center" />

</RelativeLayout>
