<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_splash"
    tools:context="com.example.activity.SignUpActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_45sdp"
            android:src="@drawable/ic_logos" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginLeft="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_47sdp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign up"
                android:textColor="@color/textTitle"
                android:textSize="@dimen/_22sdp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvEntermobileToContinue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Please enter your mobile number to continue"
                android:textColor="@color/textSubTitle"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/tvMobileNumberView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="Mobile Number"
                android:textColor="@color/textSubTitle"
                android:textSize="@dimen/_13sdp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/edtMobileNumber"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/edittextbg"
                android:elevation="@dimen/_3sdp"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/_15sdp"
                android:singleLine="true"
                android:cursorVisible="false"
                android:textCursorDrawable="@drawable/cusror_color"
                android:textSize="@dimen/_10sdp" />

            <LinearLayout
                android:id="@+id/llSend"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="@drawable/login_bg"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp">

                <TextView
                    android:id="@+id/tvSendView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Send"
                    android:textColor="@color/colorWhite" />

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_send"
                    android:tint="@color/colorWhite" />


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ic_borderbanner"
        android:gravity="center">

        <TextView
            android:id="@+id/tvHaveAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_43sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:text="Already have account ? Login"
            android:textSize="@dimen/_11sdp"
            android:textStyle="normal" />

    </LinearLayout>

</RelativeLayout>
